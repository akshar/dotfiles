[user]
	name = Akshar Dave
	email = akshar314@gmail.com
[color]
	ui = true
[merge]
	tool = opendiff
[alias]
	st = status
	co = checkout
	ci = commit
	br = branch
	s = status -s
	lg = log --oneline --decorate --all --graph
[credential]
[commit]
	gpgsign = true
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[diff-so-fancy]
	markEmptyLines = true
	changeHunkIndicators = false
